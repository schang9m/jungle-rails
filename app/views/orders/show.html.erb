<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <p>Your order has been successfully processed. We will send a confirmation email to you shortly.</p>
  </div>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
      <% @order.line_items.each do |line_item| %>
        <%= render partial: 'line_item', locals: { line_item: line_item } %>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="order-total">
    <strong>Total Amount: </strong><%= @order.total.format %>
  </div>

  <div class="order-email">
    <strong>Email used: </strong><%= @order.email %>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
</section>
